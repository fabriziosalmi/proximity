# Example environment configuration for Proximity
# Copy this file to .env and modify the values

# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.local
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_proxmox_password
PROXMOX_VERIFY_SSL=false
PROXMOX_PORT=8006

# SSH Configuration (for automated Docker installation)
# Leave empty to use PROXMOX_HOST and PROXMOX_PASSWORD
PROXMOX_SSH_HOST=
PROXMOX_SSH_PORT=22
PROXMOX_SSH_USER=root
PROXMOX_SSH_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8765
API_VERSION=v1

# Application Configuration
APP_NAME=Proximity
APP_VERSION=0.1.0
DEBUG=false

# LXC Template Configuration
DEFAULT_LXC_TEMPLATE=local:vztmpl/proximity-docker-template.tar.zst
LXC_STORAGE=local-lvm
LXC_MEMORY=2048
LXC_CORES=2
LXC_DISK_SIZE=8G

# Network Configuration
LXC_BRIDGE=vmbr0
LXC_NET_CONFIG=name=eth0,bridge=vmbr0,ip=dhcp

# Application Catalog
APP_CATALOG_PATH=/opt/proximity/catalog

# Logging
LOG_LEVEL=INFO