# Example environment configuration for Proximity
# Copy this file to .env and modify the values

# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.local
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_proxmox_password
PROXMOX_VERIFY_SSL=false
PROXMOX_PORT=8006

# SSH Configuration (for automated Docker installation)
# Leave empty to use PROXMOX_HOST and PROXMOX_PASSWORD
PROXMOX_SSH_HOST=
PROXMOX_SSH_PORT=22
PROXMOX_SSH_USER=root
PROXMOX_SSH_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8765
API_VERSION=v1

# Application Configuration
APP_NAME=Proximity
APP_VERSION=0.1.0
DEBUG=false

# LXC Template Configuration
# Proximity will automatically create an optimized template on first run
DEFAULT_LXC_TEMPLATE=local:vztmpl/proximity-alpine-docker.tar.zst
FALLBACK_LXC_TEMPLATE=local:vztmpl/alpine-3.19-default_20231225_amd64.tar.xz
LXC_STORAGE=local-lvm
LXC_MEMORY=2048
LXC_CORES=2
LXC_DISK_SIZE=8G

# LXC Security Configuration
# Default root password for LXC containers (default: "invaders")
LXC_ROOT_PASSWORD=invaders

# Set to true to generate a random password for each container (recommended for production)
# Random passwords are 16 characters long with alphanumeric + safe special characters
# Passwords are encrypted and stored in the database
LXC_PASSWORD_RANDOM=false

# Length of randomly generated passwords (only used if LXC_PASSWORD_RANDOM=true)
LXC_PASSWORD_LENGTH=16

# Network Configuration
LXC_BRIDGE=vmbr0
LXC_NET_CONFIG=name=eth0,bridge=vmbr0,ip=dhcp

# Application Catalog
APP_CATALOG_PATH=/opt/proximity/catalog

# Logging
LOG_LEVEL=INFO
# Error Monitoring & Observability
# Sentry DSN for error tracking and performance monitoring
# Get your DSN from: https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
# Leave empty to disable Sentry (useful for local development)
SENTRY_DSN=
# Optional: Override environment detection (defaults to 'production' or 'development' based on hostname)
SENTRY_ENVIRONMENT=
# Optional: Set release version for tracking deployments (defaults to APP_VERSION)
SENTRY_RELEASE=
