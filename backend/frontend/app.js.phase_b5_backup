let _uiHelpers = null;
let _appCard = null;

async function _loadUtilities() {
    if (!_uiHelpers) {
        const module = await import('./js/utils/ui-helpers.js');
        _uiHelpers = module;
    }
    if (!_appCard) {
        const module = await import('./js/components/app-card.js');
        _appCard = module;
    }
}

