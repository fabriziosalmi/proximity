{
  "id": "shlink",
  "name": "Shlink",
  "description": "Self-hosted URL shortener with analytics",
  "version": "latest",
  "icon": "https://raw.githubusercontent.com/shlinkio/shlink.io/main/public/images/shlink-logo-blue.svg",
  "category": "Utilities",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "shlink": {
        "image": "shlinkio/shlink:stable",
        "ports": ["8080:8080"],
        "environment": {
          "DEFAULT_DOMAIN": "localhost:8080",
          "IS_HTTPS_ENABLED": "false",
          "GEOLITE_LICENSE_KEY": "",
          "DB_DRIVER": "postgres",
          "DB_NAME": "shlink",
          "DB_USER": "shlink",
          "DB_PASSWORD": "shlink_password",
          "DB_HOST": "db"
        },
        "depends_on": ["db"]
      },
      "db": {
        "image": "postgres:15-alpine",
        "environment": {
          "POSTGRES_DB": "shlink",
          "POSTGRES_USER": "shlink",
          "POSTGRES_PASSWORD": "shlink_password"
        },
        "volumes": ["db_data:/var/lib/postgresql/data"]
      }
    },
    "volumes": {
      "db_data": {}
    }
  },
  "ports": [8080],
  "volumes": ["db_data"],
  "environment": {
    "DEFAULT_DOMAIN": "localhost:8080",
    "DB_PASSWORD": "shlink_password"
  },
  "min_memory": 512,
  "min_cpu": 1,
  "tags": ["url-shortener", "analytics", "utilities"],
  "author": "Shlink",
  "website": "https://shlink.io"
}
