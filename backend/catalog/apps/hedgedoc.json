{
  "id": "hedgedoc",
  "name": "HedgeDoc",
  "description": "Collaborative markdown editor and knowledge base",
  "version": "latest",
  "icon": "https://raw.githubusercontent.com/hedgedoc/hedgedoc/develop/public/icons/android-chrome-512x512.png",
  "category": "Productivity",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "hedgedoc": {
        "image": "quay.io/hedgedoc/hedgedoc:latest",
        "environment": {
          "CMD_DB_URL": "postgres://hedgedoc:hedgedoc_password@db:5432/hedgedoc",
          "CMD_DOMAIN": "localhost",
          "CMD_URL_ADDPORT": "true",
          "CMD_PROTOCOL_USESSL": "false",
          "CMD_ALLOW_ANONYMOUS": "true",
          "CMD_ALLOW_ANONYMOUS_EDITS": "true",
          "CMD_EMAIL": "false"
        },
        "volumes": [
          "uploads:/hedgedoc/public/uploads"
        ],
        "depends_on": [
          "db"
        ],
        "network_mode": "host"
      },
      "db": {
        "image": "postgres:15-alpine",
        "environment": {
          "POSTGRES_DB": "hedgedoc",
          "POSTGRES_USER": "hedgedoc",
          "POSTGRES_PASSWORD": "hedgedoc_password"
        },
        "volumes": [
          "db_data:/var/lib/postgresql/data"
        ],
        "network_mode": "host"
      }
    },
    "volumes": {
      "uploads": {},
      "db_data": {}
    }
  },
  "ports": [
    3000
  ],
  "volumes": [
    "uploads",
    "db_data"
  ],
  "environment": {
    "CMD_DB_URL": "postgres://hedgedoc:hedgedoc_password@db:5432/hedgedoc",
    "CMD_DOMAIN": "localhost"
  },
  "min_memory": 512,
  "min_cpu": 1,
  "tags": [
    "markdown",
    "collaboration",
    "notes",
    "documentation"
  ],
  "author": "HedgeDoc",
  "website": "https://hedgedoc.org"
}