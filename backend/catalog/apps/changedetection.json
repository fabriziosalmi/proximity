{
  "id": "changedetection",
  "name": "ChangeDetection.io",
  "description": "Website change detection and notification service",
  "version": "latest",
  "icon": "https://raw.githubusercontent.com/dgtlmoon/changedetection.io/master/changedetectionio/static/images/avatar-256x256.png",
  "category": "Monitoring",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "changedetection": {
        "image": "ghcr.io/dgtlmoon/changedetection.io:latest",
        "environment": {
          "BASE_URL": "http://localhost:5000",
          "PLAYWRIGHT_DRIVER_URL": "ws://playwright:3000"
        },
        "volumes": [
          "datastore:/datastore"
        ],
        "network_mode": "host"
      },
      "playwright": {
        "image": "browserless/chrome:latest",
        "environment": {
          "SCREEN_WIDTH": "1920",
          "SCREEN_HEIGHT": "1024",
          "SCREEN_DEPTH": "16",
          "MAX_CONCURRENT_SESSIONS": "10"
        },
        "network_mode": "host"
      }
    },
    "volumes": {
      "datastore": {}
    }
  },
  "ports": [
    5000
  ],
  "volumes": [
    "datastore"
  ],
  "environment": {
    "BASE_URL": "http://localhost:5000"
  },
  "min_memory": 512,
  "min_cpu": 1,
  "tags": [
    "monitoring",
    "notification",
    "web",
    "scraping"
  ],
  "author": "dgtlmoon",
  "website": "https://changedetection.io"
}