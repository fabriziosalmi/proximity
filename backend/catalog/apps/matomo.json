{
  "id": "matomo",
  "name": "Matomo",
  "description": "Web analytics platform that protects your data and privacy. Alternative to Google Analytics with powerful features.",
  "category": "Monitoring",
  "icon": "https://cdn.simpleicons.org/matomo",
  "min_memory": 2048,
  "min_cpu": 2,
  "docker_compose": {
    "version": "3.8",
    "services": {
      "matomo": {
        "image": "matomo:latest",
        "container_name": "matomo",
        "restart": "unless-stopped",
        "environment": {
          "MATOMO_DATABASE_HOST": "db",
          "MATOMO_DATABASE_ADAPTER": "mysql",
          "MATOMO_DATABASE_TABLES_PREFIX": "matomo_",
          "MATOMO_DATABASE_USERNAME": "matomo",
          "MATOMO_DATABASE_PASSWORD": "matomo_password",
          "MATOMO_DATABASE_DBNAME": "matomo"
        },
        "volumes": [
          "matomo_data:/var/www/html"
        ],
        "network_mode": "host"
      },
      "db": {
        "image": "mariadb:10",
        "container_name": "matomo_db",
        "restart": "unless-stopped",
        "environment": {
          "MYSQL_ROOT_PASSWORD": "root_password",
          "MYSQL_DATABASE": "matomo",
          "MYSQL_USER": "matomo",
          "MYSQL_PASSWORD": "matomo_password"
        },
        "volumes": [
          "matomo_db:/var/lib/mysql"
        ],
        "network_mode": "host"
      }
    },
    "volumes": {
      "matomo_data": {},
      "matomo_db": {}
    }
  },
  "ports": [
    8080
  ],
  "volumes": [
    "matomo_data",
    "matomo_db"
  ],
  "environment": {
    "MATOMO_DATABASE_PASSWORD": "matomo_password",
    "MYSQL_ROOT_PASSWORD": "root_password"
  },
  "tags": [
    "analytics",
    "privacy",
    "tracking",
    "statistics"
  ],
  "version": "latest"
}