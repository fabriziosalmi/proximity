{
  "id": "budibase",
  "name": "Budibase",
  "description": "Low-code platform for building internal tools",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/budibase/0052FF",
  "category": "Development",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "budibase-server": {
        "image": "budibase/budibase:latest",
        "restart": "unless-stopped",
        "ports": [
          "10000:10000"
        ],
        "environment": {
          "JWT_SECRET": "change_me_secret",
          "BUDIBASE_INTERNAL_API_KEY": "internal_api_key",
          "COUCH_DB_URL": "http://budibase-couchdb:5984",
          "MINIO_ENDPOINT": "budibase-minio",
          "MINIO_PORT": "9000",
          "MINIO_ACCESS_KEY": "budibase",
          "MINIO_SECRET_KEY": "budibase123",
          "MINIO_USE_SSL": "false",
          "REDIS_URL": "redis://budibase-redis:6379",
          "WORKER_URL": "http://budibase-worker:4003",
          "SERVER_URL": "http://budibase-server:4001"
        },
        "depends_on": [
          "budibase-worker",
          "budibase-couchdb",
          "budibase-redis",
          "budibase-minio"
        ]
      },
      "budibase-worker": {
        "image": "budibase/budibase:latest",
        "restart": "unless-stopped",
        "environment": {
          "WORKER": "true",
          "JWT_SECRET": "change_me_secret",
          "COUCH_DB_URL": "http://budibase-couchdb:5984",
          "MINIO_ENDPOINT": "budibase-minio",
          "MINIO_PORT": "9000",
          "MINIO_ACCESS_KEY": "budibase",
          "MINIO_SECRET_KEY": "budibase123",
          "MINIO_USE_SSL": "false",
          "REDIS_URL": "redis://budibase-redis:6379"
        },
        "depends_on": [
          "budibase-couchdb",
          "budibase-redis",
          "budibase-minio"
        ]
      },
      "budibase-couchdb": {
        "image": "couchdb:3",
        "environment": {
          "COUCHDB_USER": "budibase",
          "COUCHDB_PASSWORD": "budibase"
        },
        "volumes": [
          "budibase_couchdb_data:/opt/couchdb/data"
        ]
      },
      "budibase-redis": {
        "image": "redis:7-alpine",
        "command": "redis-server --appendonly yes",
        "volumes": [
          "budibase_redis_data:/data"
        ]
      },
      "budibase-minio": {
        "image": "minio/minio:latest",
        "command": "server /data",
        "environment": {
          "MINIO_ROOT_USER": "budibase",
          "MINIO_ROOT_PASSWORD": "budibase123"
        },
        "ports": [
          "9003:9000"
        ],
        "volumes": [
          "budibase_minio_data:/data"
        ]
      }
    },
    "volumes": {
      "budibase_couchdb_data": null,
      "budibase_redis_data": null,
      "budibase_minio_data": null
    }
  }
}
