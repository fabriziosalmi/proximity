{
  "id": "kanboard",
  "name": "Kanboard",
  "description": "Simple and flexible project management software focused on Kanban methodology",
  "category": "Automation",
  "icon": "https://cdn.simpleicons.org/trello/0052CC",
  "tags": ["kanban", "project-management", "tasks", "agile", "workflow"],
  "min_memory": 256,
  "min_cpu": 1,
  "min_disk": 2,
  "docker_compose": {
    "version": "3.8",
    "services": {
      "kanboard": {
        "image": "kanboard/kanboard:latest",
        "container_name": "kanboard",
        "restart": "unless-stopped",
        "ports": [
          "8080:80"
        ],
        "volumes": [
          "kanboard_data:/var/www/app/data",
          "kanboard_plugins:/var/www/app/plugins"
        ],
        "environment": {
          "DATABASE_URL": "sqlite:///var/www/app/data/db.sqlite"
        }
      }
    },
    "volumes": {
      "kanboard_data": {},
      "kanboard_plugins": {}
    }
  }
}
