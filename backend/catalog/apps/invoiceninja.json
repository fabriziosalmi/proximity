{
  "id": "invoiceninja",
  "name": "Invoice Ninja",
  "description": "Open source invoicing and payments platform",
  "version": "latest",
  "icon": "https://raw.githubusercontent.com/invoiceninja/invoiceninja/v5-stable/public/images/icon.png",
  "category": "Business",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "invoiceninja": {
        "image": "invoiceninja/invoiceninja:5",
        "environment": {
          "APP_URL": "http://localhost",
          "APP_KEY": "base64:change_me_32_character_string_here=",
          "DB_HOST": "db",
          "DB_DATABASE": "ninja",
          "DB_USERNAME": "ninja",
          "DB_PASSWORD": "ninja_password"
        },
        "volumes": [
          "public:/var/www/app/public",
          "storage:/var/www/app/storage"
        ],
        "depends_on": [
          "db"
        ],
        "network_mode": "host"
      },
      "db": {
        "image": "mysql:8.0",
        "environment": {
          "MYSQL_ROOT_PASSWORD": "root_password",
          "MYSQL_DATABASE": "ninja",
          "MYSQL_USER": "ninja",
          "MYSQL_PASSWORD": "ninja_password"
        },
        "volumes": [
          "db_data:/var/lib/mysql"
        ],
        "network_mode": "host"
      }
    },
    "volumes": {
      "public": {},
      "storage": {},
      "db_data": {}
    }
  },
  "ports": [
    80
  ],
  "volumes": [
    "public",
    "storage",
    "db_data"
  ],
  "environment": {
    "APP_KEY": "base64:change_me_32_character_string_here=",
    "DB_PASSWORD": "ninja_password",
    "MYSQL_ROOT_PASSWORD": "root_password"
  },
  "min_memory": 1024,
  "min_cpu": 1,
  "tags": [
    "invoice",
    "billing",
    "business",
    "accounting"
  ],
  "author": "Invoice Ninja",
  "website": "https://invoiceninja.com"
}