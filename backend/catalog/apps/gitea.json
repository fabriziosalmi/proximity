{
  "id": "gitea",
  "name": "Gitea",
  "description": "Lightweight self-hosted Git service with web interface",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/gitea/609926",
  "category": "DevOps",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "gitea": {
        "image": "gitea/gitea:latest",
        "environment": {
          "USER_UID": "1000",
          "USER_GID": "1000",
          "GITEA__database__DB_TYPE": "postgres",
          "GITEA__database__HOST": "db:5432",
          "GITEA__database__NAME": "gitea",
          "GITEA__database__USER": "gitea",
          "GITEA__database__PASSWD": "gitea_password"
        },
        "volumes": [
          "gitea_data:/data",
          "/etc/timezone:/etc/timezone:ro",
          "/etc/localtime:/etc/localtime:ro"
        ],
        "depends_on": [
          "db"
        ],
        "restart": "always",
        "network_mode": "host"
      },
      "db": {
        "image": "postgres:14",
        "environment": {
          "POSTGRES_DB": "gitea",
          "POSTGRES_USER": "gitea",
          "POSTGRES_PASSWORD": "gitea_password"
        },
        "volumes": [
          "postgres_data:/var/lib/postgresql/data"
        ],
        "restart": "always",
        "network_mode": "host"
      }
    },
    "volumes": {
      "gitea_data": {},
      "postgres_data": {}
    }
  },
  "ports": [
    3000,
    22
  ],
  "volumes": [
    "gitea_data",
    "postgres_data"
  ],
  "environment": {
    "GITEA__database__PASSWD": "gitea_password",
    "POSTGRES_PASSWORD": "gitea_password"
  },
  "min_memory": 1024,
  "min_cpu": 1,
  "tags": [
    "git",
    "version-control",
    "devops",
    "code-hosting"
  ],
  "author": "Gitea",
  "website": "https://gitea.io"
}