{
  "id": "directus",
  "name": "Directus",
  "description": "Open data platform for headless CMS and APIs",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/directus/263238",
  "category": "Development",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "directus": {
        "image": "directus/directus:latest",
        "restart": "unless-stopped",
        "ports": [
          "8055:8055"
        ],
        "environment": {
          "KEY": "replace-with-secure-key",
          "SECRET": "replace-with-secure-secret",
          "PUBLIC_URL": "http://localhost:8055",
          "ADMIN_EMAIL": "admin@example.com",
          "ADMIN_PASSWORD": "ChangeMe123!",
          "DATABASE_CLIENT": "postgres",
          "DATABASE_HOST": "directus_db",
          "DATABASE_PORT": "5432",
          "DATABASE_DATABASE": "directus",
          "DATABASE_USER": "directus",
          "DATABASE_PASSWORD": "directus",
          "WEBSOCKETS_ENABLED": "true"
        },
        "volumes": [
          "directus_uploads:/directus/uploads",
          "directus_extensions:/directus/extensions"
        ],
        "depends_on": [
          "directus_db"
        ]
      },
      "directus_db": {
        "image": "postgres:15-alpine",
        "environment": {
          "POSTGRES_DB": "directus",
          "POSTGRES_USER": "directus",
          "POSTGRES_PASSWORD": "directus"
        },
        "volumes": [
          "directus_db_data:/var/lib/postgresql/data"
        ]
      }
    },
    "volumes": {
      "directus_uploads": null,
      "directus_extensions": null,
      "directus_db_data": null
    }
  }
}
