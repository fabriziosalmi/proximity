{
  "id": "linkace",
  "name": "LinkAce",
  "description": "Self-hosted bookmark manager and link archiver",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/link/0A66C2",
  "category": "Productivity",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "linkace": {
        "image": "linkace/linkace:latest",
        "restart": "unless-stopped",
        "ports": [
          "80:80"
        ],
        "volumes": [
          "linkace_data:/app/storage"
        ],
        "environment": {
          "APP_KEY": "change_me",
          "DB_CONNECTION": "mysql",
          "DB_HOST": "linkace_mysql",
          "DB_PORT": "3306",
          "DB_DATABASE": "linkace",
          "DB_USERNAME": "linkace",
          "DB_PASSWORD": "linkace"
        },
        "depends_on": [
          "linkace_mysql"
        ]
      },
      "linkace_mysql": {
        "image": "mysql:8.0",
        "environment": {
          "MYSQL_ROOT_PASSWORD": "rootpassword",
          "MYSQL_DATABASE": "linkace",
          "MYSQL_USER": "linkace",
          "MYSQL_PASSWORD": "linkace"
        },
        "volumes": [
          "linkace_mysql_data:/var/lib/mysql"
        ]
      }
    },
    "volumes": {
      "linkace_data": null,
      "linkace_mysql_data": null
    }
  }
}
