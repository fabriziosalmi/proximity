{
  "id": "mealie",
  "name": "Mealie",
  "description": "Self-hosted recipe manager and meal planner",
  "version": "latest",
  "icon": "https://raw.githubusercontent.com/mealie-recipes/mealie/mealie-next/frontend/public/img/favicon.png",
  "category": "Lifestyle",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "mealie": {
        "image": "ghcr.io/mealie-recipes/mealie:latest",
        "environment": {
          "ALLOW_SIGNUP": "true",
          "PUID": "1000",
          "PGID": "1000",
          "TZ": "UTC",
          "MAX_WORKERS": "1",
          "WEB_CONCURRENCY": "1",
          "BASE_URL": "http://localhost:9925"
        },
        "volumes": [
          "data:/app/data"
        ],
        "network_mode": "host"
      }
    },
    "volumes": {
      "data": {}
    }
  },
  "ports": [
    9925
  ],
  "volumes": [
    "data"
  ],
  "environment": {
    "ALLOW_SIGNUP": "true",
    "TZ": "UTC",
    "BASE_URL": "http://localhost:9925"
  },
  "min_memory": 512,
  "min_cpu": 1,
  "tags": [
    "recipes",
    "cooking",
    "meal-planning",
    "lifestyle"
  ],
  "author": "Mealie Recipes",
  "website": "https://mealie.io"
}