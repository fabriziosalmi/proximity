{
  "id": "dokuwiki",
  "name": "DokuWiki",
  "description": "Simple to use and highly versatile wiki software that doesn't require a database",
  "category": "CMS",
  "icon": "https://cdn.simpleicons.org/wikipedia/000000",
  "tags": [
    "wiki",
    "documentation",
    "knowledge-base",
    "no-database",
    "markdown"
  ],
  "min_memory": 256,
  "min_cpu": 1,
  "min_disk": 2,
  "docker_compose": {
    "version": "3.8",
    "services": {
      "dokuwiki": {
        "image": "lscr.io/linuxserver/dokuwiki:latest",
        "container_name": "dokuwiki",
        "restart": "unless-stopped",
        "environment": {
          "PUID": "1000",
          "PGID": "1000",
          "TZ": "Etc/UTC"
        },
        "volumes": [
          "dokuwiki_config:/config"
        ],
        "network_mode": "host"
      }
    },
    "volumes": {
      "dokuwiki_config": {}
    }
  },
  "version": "latest"
}