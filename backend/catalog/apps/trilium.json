{
  "id": "trilium",
  "name": "Trilium Notes",
  "description": "Hierarchical note taking application with focus on building personal knowledge base",
  "category": "CMS",
  "icon": "https://cdn.simpleicons.org/trello/0052CC",
  "tags": ["notes", "wiki", "knowledge-base", "markdown", "organization"],
  "min_memory": 512,
  "min_cpu": 1,
  "min_disk": 2,
  "docker_compose": {
    "version": "3.8",
    "services": {
      "trilium": {
        "image": "zadam/trilium:latest",
        "container_name": "trilium",
        "restart": "unless-stopped",
        "ports": [
          "8080:8080"
        ],
        "volumes": [
          "trilium_data:/home/node/trilium-data"
        ],
        "environment": {
          "TRILIUM_DATA_DIR": "/home/node/trilium-data"
        }
      }
    },
    "volumes": {
      "trilium_data": {}
    }
  }
}
