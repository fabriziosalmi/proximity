{
  "id": "snipe-it",
  "name": "Snipe-IT",
  "description": "Asset management system for IT teams",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/inventory/22A6B3",
  "category": "Business",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "snipeit": {
        "image": "snipe/snipe-it:latest",
        "restart": "unless-stopped",
        "ports": [
          "8282:80"
        ],
        "environment": {
          "APP_KEY": "base64:change_me",
          "APP_URL": "http://localhost:8282",
          "DB_HOST": "snipeit_db",
          "DB_DATABASE": "snipeit",
          "DB_USERNAME": "snipeit",
          "DB_PASSWORD": "snipeit"
        },
        "depends_on": [
          "snipeit_db"
        ]
      },
      "snipeit_db": {
        "image": "mariadb:10.11",
        "environment": {
          "MYSQL_DATABASE": "snipeit",
          "MYSQL_USER": "snipeit",
          "MYSQL_PASSWORD": "snipeit",
          "MYSQL_ROOT_PASSWORD": "rootpassword"
        },
        "volumes": [
          "snipeit_db_data:/var/lib/mysql"
        ]
      }
    },
    "volumes": {
      "snipeit_db_data": null
    }
  }
}
