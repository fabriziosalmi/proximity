{
  "id": "excalidraw",
  "name": "Excalidraw",
  "description": "Virtual collaborative whiteboard for sketching hand-drawn like diagrams and wireframes",
  "category": "Automation",
  "icon": "https://cdn.simpleicons.org/excalidraw/6965DB",
  "tags": ["whiteboard", "drawing", "diagrams", "collaboration", "sketch"],
  "min_memory": 256,
  "min_cpu": 1,
  "min_disk": 1,
  "docker_compose": {
    "version": "3.8",
    "services": {
      "excalidraw": {
        "image": "excalidraw/excalidraw:latest",
        "container_name": "excalidraw",
        "restart": "unless-stopped",
        "ports": [
          "3000:80"
        ],
        "environment": {
          "VITE_APP_DISABLE_SENTRY": "true",
          "VITE_APP_DISABLE_TRACKING": "true"
        }
      }
    }
  }
}
