{
  "id": "wikijs",
  "name": "Wiki.js",
  "description": "Modern and powerful wiki software built on Node.js",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/wikidotjs/1976D2",
  "category": "CMS",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "wikijs": {
        "image": "ghcr.io/requarks/wiki:2",
        "environment": {
          "DB_TYPE": "postgres",
          "DB_HOST": "db",
          "DB_PORT": "5432",
          "DB_USER": "wikijs",
          "DB_PASS": "wikijs_password",
          "DB_NAME": "wiki"
        },
        "depends_on": [
          "db"
        ],
        "restart": "always",
        "network_mode": "host"
      },
      "db": {
        "image": "postgres:14",
        "environment": {
          "POSTGRES_DB": "wiki",
          "POSTGRES_USER": "wikijs",
          "POSTGRES_PASSWORD": "wikijs_password"
        },
        "volumes": [
          "postgres_data:/var/lib/postgresql/data"
        ],
        "restart": "always",
        "network_mode": "host"
      }
    },
    "volumes": {
      "postgres_data": {}
    }
  },
  "ports": [
    3000
  ],
  "volumes": [
    "postgres_data"
  ],
  "environment": {
    "DB_PASS": "wikijs_password",
    "POSTGRES_PASSWORD": "wikijs_password"
  },
  "min_memory": 1024,
  "min_cpu": 1,
  "tags": [
    "wiki",
    "documentation",
    "knowledge-base",
    "cms"
  ],
  "author": "Requarks",
  "website": "https://js.wiki"
}