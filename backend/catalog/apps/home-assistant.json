{
  "id": "home-assistant",
  "name": "Home Assistant",
  "description": "Open source home automation platform",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/homeassistant/18BCF2",
  "category": "Automation",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "homeassistant": {
        "image": "homeassistant/home-assistant:latest",
        "ports": ["8123:8123"],
        "environment": {
          "TZ": "UTC"
        },
        "volumes": ["hass_config:/config"],
        "restart": "always",
        "network_mode": "host"
      }
    },
    "volumes": {
      "hass_config": {}
    }
  },
  "ports": [8123],
  "volumes": ["hass_config"],
  "environment": {},
  "min_memory": 1024,
  "min_cpu": 2,
  "tags": ["home-automation", "iot", "smart-home", "automation"],
  "author": "Home Assistant",
  "website": "https://www.home-assistant.io"
}
