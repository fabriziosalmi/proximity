{
  "id": "pihole",
  "name": "Pi-hole",
  "description": "Network-wide ad blocking via DNS",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/pihole/96060C",
  "category": "Security",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "pihole": {
        "image": "pihole/pihole:latest",
        "ports": ["53:53/tcp", "53:53/udp", "8080:80"],
        "environment": {
          "TZ": "UTC",
          "WEBPASSWORD": "admin"
        },
        "volumes": [
          "pihole_data:/etc/pihole",
          "dnsmasq_data:/etc/dnsmasq.d"
        ],
        "restart": "always"
      }
    },
    "volumes": {
      "pihole_data": {},
      "dnsmasq_data": {}
    }
  },
  "ports": [53, 8080],
  "volumes": ["pihole_data", "dnsmasq_data"],
  "environment": {
    "WEBPASSWORD": "admin"
  },
  "min_memory": 512,
  "min_cpu": 1,
  "tags": ["dns", "ad-blocking", "security", "privacy"],
  "author": "Pi-hole",
  "website": "https://pi-hole.net"
}
