{
  "id": "caddy",
  "name": "Caddy",
  "description": "Fast web server with automatic HTTPS",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/caddy/1F88C0",
  "category": "Web Server",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "caddy": {
        "image": "caddy:latest",
        "ports": ["80:80", "443:443"],
        "volumes": [
          "caddy_data:/data",
          "caddy_config:/config"
        ],
        "restart": "always"
      }
    },
    "volumes": {
      "caddy_data": {},
      "caddy_config": {}
    }
  },
  "ports": [80, 443],
  "volumes": ["caddy_data", "caddy_config"],
  "environment": {},
  "min_memory": 256,
  "min_cpu": 1,
  "tags": ["web-server", "https", "reverse-proxy", "ssl"],
  "author": "Light Code Labs",
  "website": "https://caddyserver.com"
}
