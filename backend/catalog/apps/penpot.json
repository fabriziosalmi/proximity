{
  "id": "penpot",
  "name": "Penpot",
  "description": "Open-source design and prototyping platform",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/penpot/000000",
  "category": "Productivity",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "penpot-frontend": {
        "image": "penpotapp/penpot-frontend:latest",
        "restart": "unless-stopped",
        "ports": [
          "9001:80"
        ],
        "environment": {
          "PENPOT_PUBLIC_URI": "http://localhost:9001"
        },
        "depends_on": [
          "penpot-backend"
        ]
      },
      "penpot-backend": {
        "image": "penpotapp/penpot-backend:latest",
        "restart": "unless-stopped",
        "environment": {
          "PENPOT_PUBLIC_URI": "http://localhost:9001",
          "PENPOT_FLAGS": "enable-registration enable-login",
          "PENPOT_SECRET_KEY": "change_me_secret",
          "PENPOT_DATABASE_URI": "postgresql://penpot:penpot@penpot-postgres:5432/penpot",
          "PENPOT_REDIS_URI": "redis://penpot-redis:6379/0",
          "PENPOT_ASSETS_STORAGE_BACKEND": "minio",
          "PENPOT_STORAGE_MINIO_ENDPOINT": "http://penpot-minio:9000",
          "PENPOT_STORAGE_MINIO_BUCKET": "penpot",
          "PENPOT_STORAGE_MINIO_ACCESS_KEY": "penpot",
          "PENPOT_STORAGE_MINIO_SECRET_KEY": "penpotsecret"
        },
        "depends_on": [
          "penpot-postgres",
          "penpot-redis",
          "penpot-minio"
        ]
      },
      "penpot-exporter": {
        "image": "penpotapp/penpot-exporter:latest",
        "restart": "unless-stopped",
        "environment": {
          "PENPOT_PUBLIC_URI": "http://localhost:9001",
          "PENPOT_STORAGE_MINIO_ENDPOINT": "http://penpot-minio:9000",
          "PENPOT_STORAGE_MINIO_BUCKET": "penpot",
          "PENPOT_STORAGE_MINIO_ACCESS_KEY": "penpot",
          "PENPOT_STORAGE_MINIO_SECRET_KEY": "penpotsecret",
          "PENPOT_REDIS_URI": "redis://penpot-redis:6379/0"
        },
        "depends_on": [
          "penpot-redis",
          "penpot-minio"
        ]
      },
      "penpot-postgres": {
        "image": "postgres:15-alpine",
        "environment": {
          "POSTGRES_DB": "penpot",
          "POSTGRES_USER": "penpot",
          "POSTGRES_PASSWORD": "penpot"
        },
        "volumes": [
          "penpot_postgres_data:/var/lib/postgresql/data"
        ]
      },
      "penpot-redis": {
        "image": "redis:7-alpine",
        "command": "redis-server --appendonly yes",
        "volumes": [
          "penpot_redis_data:/data"
        ]
      },
      "penpot-minio": {
        "image": "minio/minio:latest",
        "command": "server /data --console-address :9001",
        "environment": {
          "MINIO_ROOT_USER": "penpot",
          "MINIO_ROOT_PASSWORD": "penpotsecret"
        },
        "ports": [
          "9002:9000"
        ],
        "volumes": [
          "penpot_storage:/data"
        ]
      }
    },
    "volumes": {
      "penpot_postgres_data": null,
      "penpot_redis_data": null,
      "penpot_storage": null
    }
  }
}
