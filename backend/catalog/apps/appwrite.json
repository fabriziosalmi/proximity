{
  "id": "appwrite",
  "name": "Appwrite",
  "description": "Backend as a Service platform for building secure and scalable web and mobile applications",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/appwrite/F02E65",
  "category": "Development",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "appwrite": {
        "image": "appwrite/appwrite:latest",
        "environment": {
          "DOCKER_API_HOST": "unix:///var/run/docker.sock",
          "DOCKER_API_VERSION": "1.40",
          "APPWRITE_REDIS_HOST": "redis",
          "APPWRITE_REDIS_PORT": "6379",
          "APPWRITE_DB_HOST": "mariadb",
          "APPWRITE_DB_PORT": "3306",
          "APPWRITE_DB_USER": "appwrite",
          "APPWRITE_DB_PASS": "appwrite",
          "APPWRITE_DB_SCHEMA": "appwrite",
          "APPWRITE_INFLUXDB_HOST": "influxdb",
          "APPWRITE_INFLUXDB_PORT": "8086"
        },
        "volumes": [
          "/var/run/docker.sock:/var/run/docker.sock",
          "appwrite_uploads:/storage/uploads:rw",
          "appwrite_cache:/storage/cache:rw",
          "appwrite_config:/storage/config:rw",
          "appwrite_certificates:/storage/certificates:rw"
        ],
        "depends_on": [
          "mariadb",
          "redis",
          "influxdb"
        ],
        "networks": [
          "appwrite"
        ],
        "ports": [
          "80:80",
          "443:443"
        ]
      },
      "mariadb": {
        "image": "mariadb:latest",
        "environment": {
          "MYSQL_ROOT_PASSWORD": "rootpassword",
          "MYSQL_DATABASE": "appwrite",
          "MYSQL_USER": "appwrite",
          "MYSQL_PASSWORD": "appwrite"
        },
        "volumes": [
          "appwrite_mariadb:/var/lib/mysql"
        ],
        "networks": [
          "appwrite"
        ]
      },
      "redis": {
        "image": "redis:7-alpine",
        "networks": [
          "appwrite"
        ]
      },
      "influxdb": {
        "image": "influxdb:1.8",
        "environment": {
          "INFLUXDB_DB": "appwrite"
        },
        "volumes": [
          "appwrite_influxdb:/var/lib/influxdb"
        ],
        "networks": [
          "appwrite"
        ]
      }
    },
    "volumes": {
      "appwrite_uploads": null,
      "appwrite_cache": null,
      "appwrite_config": null,
      "appwrite_certificates": null,
      "appwrite_mariadb": null,
      "appwrite_influxdb": null
    },
    "networks": {
      "appwrite": {
        "driver": "bridge"
      }
    }
  }
}
