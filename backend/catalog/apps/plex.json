{
  "id": "plex",
  "name": "Plex Media Server",
  "description": "Stream your media to any device",
  "version": "latest",
  "icon": "https://cdn.simpleicons.org/plex/EBAF00",
  "category": "Media",
  "docker_compose": {
    "version": "3.8",
    "services": {
      "plex": {
        "image": "plexinc/pms-docker:latest",
        "ports": ["32400:32400"],
        "environment": {
          "TZ": "UTC",
          "PLEX_CLAIM": "claim-token-here"
        },
        "volumes": [
          "plex_config:/config",
          "plex_transcode:/transcode"
        ],
        "restart": "always"
      }
    },
    "volumes": {
      "plex_config": {},
      "plex_transcode": {}
    }
  },
  "ports": [32400],
  "volumes": ["plex_config", "plex_transcode"],
  "environment": {
    "TZ": "UTC"
  },
  "min_memory": 2048,
  "min_cpu": 2,
  "tags": ["media", "streaming", "movies", "tv", "music"],
  "author": "Plex Inc",
  "website": "https://www.plex.tv"
}
