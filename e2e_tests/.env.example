# E2E Test Environment Configuration
# Copy this to .env in the e2e_tests directory and customize as needed

# Frontend URL
BASE_URL=http://localhost:5173

# Backend API URL
API_URL=http://localhost:8000

# Enable video recording for failed tests (1 = enabled, 0 = disabled)
RECORD_VIDEO=0

# Playwright debug mode (1 = enabled, opens inspector)
PWDEBUG=0

# Test timeout in seconds (default is 300s / 5 minutes)
TEST_TIMEOUT=300

# Deployment timeout in seconds (how long to wait for app to reach 'running' state)
DEPLOYMENT_TIMEOUT=180

# Headless mode (1 = headless, 0 = headed browser visible)
HEADLESS=1
