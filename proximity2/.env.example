# Proximity 2.0 Environment Configuration
# Copy this file to .env and update with your settings

# Django Configuration
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production-CHANGE-THIS
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Database Configuration
# For development, SQLite is used by default
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://proximity:proximity_password@db:5432/proximity
DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256

# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.example.com
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_VERIFY_SSL=False
PROXMOX_PORT=8006

# Sentry Configuration (Backend & Frontend)
# Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Sentry Frontend (optional, for source maps & releases)
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Frontend Configuration
PUBLIC_API_URL=http://localhost:8000
VITE_API_URL=http://backend:8000
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0
VITE_SENTRY_DEBUG=false
